<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <EditText
            android:id="@+id/editTextTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Task Name"
            android:inputType="text"/>

    <EditText
            android:id="@+id/editTextExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Explanation"
            android:inputType="text"/>

    <CheckBox
            android:id="@+id/checkBoxCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"/>

    <Button
            android:id="@+id/buttonDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Deadline"/>

    <TextView
            android:id="@+id/textViewDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: Not Selected"
            android:paddingTop="8dp"/>

    <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Task"
            android:layout_marginTop="16dp"/>
    <!-- Yeni Sentiment Analiz Butonu -->
    <Button
            android:id="@+id/buttonAnalyze"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analyze Sentiment"
            android:layout_marginTop="16dp"/>

    <!-- Analiz Sonuçlarını Göstermek için Yeni TextView -->
    <TextView
            android:id="@+id/textViewAnalysisResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analysis Result Here"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="16sp"/>
</LinearLayout>